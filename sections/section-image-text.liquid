<div class="text-image">
  <div class="text-image__inner page-width {% if section.settings.no_margin %} page-width--no-margin {% endif %}">
    <div class="text-image__image">
      {% if section.settings.image_mob != blank %}
        <picture>
          <source media="(max-width: 741px)" srcset="{{ section.settings.image_mob | image_url: width: 800 }}">
          <source media="(min-width: 742px)" srcset="{{ section.settings.image | image_url: width: 2000 }}">
          <img src="{{ section.settings.image | image_url: width: 300 }}" alt="{{ section.settings.image.alt }}">
        </picture>
      {% else %}
        <picture>
          <source media="(max-width: 741px)" srcset="{{ section.settings.image | image_url: width: 1000 }}">
          <source media="(min-width: 742px)" srcset="{{ section.settings.image | image_url: width: 2000 }}">
          <img src="{{ section.settings.image | image_url: width: 300 }}" alt="{{ section.settings.image.alt }}">
        </picture>
      {% endif %}
    </div>
    <div class="text-image__text-wrap max-width">
      <h2 class="text-image__heading text {{ section.settings.heading_size }}" {{ section.shopify_attributes }}>
        {{ section.settings.heading }}
      </h2>
      <div class="text-image__text {{ section.settings.text_style }}" {{ section.shopify_attributes }}>
        {{ section.settings.text }}
      </div>
      <div class="text-image__buttons{% if section.settings.button_label != blank and section.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}" {{ block.shopify_attributes }}>
        {%- if section.settings.button_label != blank -%}
          {% render 'component-button', label: section.settings.button_label, link: section.settings.button_link %}
        {%- endif -%}
        {%- if section.settings.button_label_2 != blank -%}
          {% render 'component-button', label: section.settings.button_label_2, link: section.settings.button_link_2 %}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{%- comment -%}

{% schema %}
  {
    "name": "New Image with text",
    "class": "section index-section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
      "type": "checkbox",
      "id": "no_margin",
      "label": "Remove section space below",
      "default": false
    },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Desktop image"
      },
      {
        "type": "image_picker",
        "id": "image_mob",
        "label": "Optional mobile image"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "Image & text",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h1",
            "label": "Heading 1"
          },
          {
            "value": "h2",
            "label": "Heading 2"
          },
          {
            "value": "h3",
            "label": "Heading 3"
          },
          {
            "value": "h4",
            "label": "Heading 4"
          }, {
            "value": "h5",
            "label": "Heading 5"
          }, {
            "value": "h6",
            "label": "Heading 6"
          }
        ],
        "default": "h3",
        "label": "Heading size"
      }, {
        "type": "richtext",
        "id": "text",
        "default": "<p>Soft engineered mesh has 3 advantages to help your next run: lightweight so you can feel fast; structured fit for stability; and breathability for airflow so your feet stay cool.</p>",
        "label": "Text"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Button",
        "label": "First button label",
        "info": "Leave the label blank to hide the button."
      }, {
        "type": "url",
        "id": "button_link",
        "label": "First button link"
      }, {
        "type": "text",
        "id": "button_label_2",
        "label": "Second button label",
        "info": "Leave the label blank to hide the button."
      }, {
        "type": "url",
        "id": "button_link_2",
        "label": "Second button link"
      }
    ],
    "presets": [
      {
        "name": "New Image with text"
      }
    ]
  }
{% endschema %}

{%- endcomment -%}