<div class="featured-content-cards color-{{ section.settings.color_scheme }} {% if section.settings.no_margin %} page-width--no-margin {% endif %}">
  {% if section.settings.title != blank %}
    <div class="section-title page-width">
      <{{ section.settings.heading_size }} class="h3">{{ section.settings.title }}</{{ section.settings.heading_size }}>   
    </div>
  {% endif %}    
  <div class="featured-content-cards__inner featured-content-cards__inner--show-{{ section.settings.design }}  page-width {% unless section.settings.scrollable %} featured-content-cards__inner--grid {% endunless %}" {% if section.settings.scrollable %} scroller {% endif %}>    
    {% for block in section.blocks %}  
        <div class="featured-content-cards__card">
          <div class="logo-card">
          {% if block.settings.image != blank %}            
            {{ block.settings.image
              | image_url: width: 3840
              | image_tag: loading: 'lazy', sizes: sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
            }}     
          {% endif %}
          </div>
        </div>
      {%- endfor -%}  
  </div>
</div> 


{% schema %}
{
  "name": "Logo list",
  "class": "index-section logo-list-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Logo list"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "Color Scheme"
    },    
    {
      "type": "select",
      "id": "design",
      "options": [
        {
          "value": "3",
          "label": "Three"
        },
        {
          "value": "4",
          "label": "Four"
        },
        {
          "value": "5",
          "label": "Five"
        },
        {
          "value": "6",
          "label": "Six"
        }
      ],
      "default": "4",
      "label": "Cards per row"
    },
    {
      "type": "checkbox",
      "id": "no_margin",
      "label": "Remove section space below",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "scrollable",
      "label": "Show as slider",
      "default": false
    },
    {
      "type": "header",
      "content": "SEO"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h1",
      "label": "Heading html tag"
    }
  ],
  "blocks": [
  {
    "type": "logo",
    "name": "logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
],
  "presets": [
    {
      "name": "Logo list",
      "blocks": [
        {
          "type": "logo"      
        },
        {
          "type": "logo"      
        },
        {
          "type": "logo"      
        },
        {
          "type": "logo"      
        }
      ]
    }
  ]
}
{% endschema %}
